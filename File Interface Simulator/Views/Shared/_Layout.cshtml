<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - File Interface Simulator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <div class="row">
            <img src="~/images/ferranti_logo.png" />
        </div>
        <div class="row">
            <div class="col-lg-3">
                <ul class="nav nav-pills nav-stacked">
                    <li>Home</li>
                    <li>Manual</li>
                 </ul>

                <h2>Setup</h2>

                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Field Specification <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("UploadFieldSpecification", "SpecificationSetup")">New</a></li>
                            <li><a href="@Url.Action("FieldSpecificationOverview", "SpecificationSetup")">Overview</a></li>
                            <li>Search</li>
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            File Specification <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("UploadFileSpecification", "SpecificationSetup")">New</a></li>
                            <li><a href="@Url.Action("FileSpecificationOverview", "SpecificationSetup")">Overview</a></li>
                            <li>Search</li>
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Workflow Template <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("CreateWorkflowTemplate", "WorkflowTemplateSetup")">New</a></li>
                            <li>Overview</li>
                            <li>Search</li>
                        </ul>
                    </li>
                </ul>

                <h2>Operational</h2>

                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Message <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>Overview</li>
                            <li>Search</li>
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Workflow <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>Overview</li>
                            <li>Search</li>
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Workflow Template <span class="caret"></span>
                        </a>
                </ul>
            </div>
            <div class="col-lg-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - File Interface Simulator</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
